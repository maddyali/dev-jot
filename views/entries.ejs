<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>Entries</h1>

    <ul>
      <% entries.forEach(el => { %>
      <li class="entryItem" data-id="<%=el._id%>">
        <span><%=el.content%></span>
      </li>
      <% }) %>
    </ul>

    <h2>Total Entries: <%= totalEntries %></h2>

    <form action="/journal/createEntry" method="POST">
      <input type="text" placeholder="Enter Entry" name="entryItem" />
      <input type="submit" />
    </form>

    <script src="js/main.js"></script>
  </body>
</html>
